---
import NavigationReact from "./NavigationReact.tsx";
import ReownProvider from "../context/ReownProvider.tsx";

// Get cookies for SSR hydration
const cookies = Astro.request.headers.get('cookie');
---

<ReownProvider cookies={cookies} client:load>
  <NavigationReact client:load />
</ReownProvider>

<script>
  import { getPublicKey, connect, disconnect } from "../stellar-wallets-kit";
  
  // Expose wallet functions globally for React component
  window.getPublicKey = getPublicKey;
  window.connect = connect;
  window.disconnect = disconnect;
</script>
