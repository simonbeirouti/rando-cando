---
import Layout from "../layouts/Layout.astro";
import Counter from "../components/Counter.astro";
import WelcomeCard from "../components/WelcomeCard.tsx";
import helloWorld from "../contracts/hello_world";
const { result } = await helloWorld.hello({ to: "you" });
const greeting = result.join(" ");
---

<script is:inline>
	var global = global || window;
</script>
<Layout title={greeting}>
	<main
		class="mx-auto p-4 w-full max-w-4xl space-y-8"
	>
		<WelcomeCard greeting={greeting} client:load />
		<Counter />
	</main>
</Layout>
